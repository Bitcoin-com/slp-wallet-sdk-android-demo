<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".settings.BackupFragment">

    <TextView
            android:text="@string/mnemonic_explanation" android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            style="@style/MyBodyText"
            android:textAlignment="center"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/mnemonic"
            app:layout_constraintTop_toBottomOf="@+id/instructions"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            tools:text="idea sister ceiling net position scissors machine wire sick local affair gloom"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            style="@style/MyListItemTitle"
            android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>